@model AbsenceManagementSystem.Model.ViewModels.PendingRequestsViewModel

@{
    ViewData["Title"] = "Home Page";
}


<!-- Small top boxes (Stat box) -->
<div class="row">
    <div class="col-lg-3 col-6">
        <!-- small box -->
        <div class="small-box bg-info">
            <div class="inner">
                
            </div>
            
        </div>
    </div>
    
    <!-- ./col -->
</div>
<!-- /.row -->
<!-- Main row -->


<div class="row">
    <div class="col-lg-8">

        
        <!-- /.card -->

        <div class="card" style="width: 150%">
            
            <div class="card-body table-responsive p-0">
                <table class="table table-striped table-valign-middle">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Start Date</th>
                            <th>End Date</th>
                            <th>Number of Days</th>
                            <th>Leave Type</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Requests.Any())
                        {
                            @foreach (var req in Model.Requests)
                            {
                                <tr>
                                    <td>
                                        @req.EmployeeName
                                    </td>
                                    <td>@req.StartDate</td>
                                    <td>@req.EndDate</td>
                                    <td>
                                        @req.NumberOfDaysOff
                                    </td>
                                    <td>
                                        @req.LeaveType.ToString()
                                    </td>
                                    <td>
                                        @req.Status.ToString()
                                    </td>
                                    <td>
                                        <span>
                                            <a asp-controller="EmployeeLeave" asp-action="ApproveLeave" asp-route-requestId="@req.Id">
                                                approve
                                            </a>
                                            <a asp-controller="EmployeeLeave" asp-action="RejectLeave" asp-route-requestId="@req.Id" class="nav-link">
                                                reject
                                            </a>
                                        </span>
                                    </td>
                                </tr>
                            }
                        }




                    </tbody>
                </table>
            </div>
        </div>
        <!-- /.card -->
    </div>
    <!-- /.col-md-6 -->
    <div class="col-lg-6">

    </div>
    <!-- /.col-md-6 -->
</div>


<!-- /.row (main row) -->
<!-- OPTIONAL SCRIPTS -->
<script src="~/plugins/chart.js/chart.min.js"></script>

<script src="~/js/sitejs/demo.js"></script>

@model AbsenceManagementSystem.Model.ViewModels.LeaveEntitlementViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}


<div class="row">
    <div class="col-lg-10">
        <!-- Content Wrapper. Contains page content -->
        
            <!-- Main content -->
            <section class="content">

                <!-- Default box -->
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Overview</h3>

                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-12 col-md-12 col-lg-12 order-2 order-md-1">
                                <div class="row">
                                    <div class="col-12 col-sm-3">
                                        <div class="info-box bg-light">
                                            <div class="info-box-content">
                                                <span class="info-box-text text-center text-muted">Total Leave Entitled</span>
                                                <span class="info-box-number text-center text-muted mb-0">@Model.TotalLeaveEntitled</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-12 col-sm-3">
                                        <div class="info-box bg-light">
                                            <div class="info-box-content">
                                                <span class="info-box-text text-center text-muted">Total Leave Taken</span>
                                                <span class="info-box-number text-center text-muted mb-0">@Model.TotalLeaveTaken</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-12 col-sm-3">
                                        <div class="info-box bg-light">
                                            <div class="info-box-content">
                                                <span class="info-box-text text-center text-muted">Total Pending</span>
                                                <span class="info-box-number text-center text-muted mb-0">@Model.TotalLeavePending</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-12 col-sm-3">
                                        <div class="info-box bg-light">
                                            <div class="info-box-content">
                                                <span class="info-box-text text-center text-muted">Leave Balance</span>
                                                <span class="info-box-number text-center text-muted mb-0">@Model.LeaveBalance</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-12">
                                        <h4>Employee Info</h4>
                                        <div class="post">
                                            <div class="user-block">
                                                <span class="username">
                                                    <a href="#">@Model.EmployeeName</a>
                                                </span>
                                                <span class="description">Contract Type: @Model.ContractType</span>
                                            </div>
                                            <!-- /.user-block -->
                                            <p>
                                                All employees are entitled to 10 days unplanned sick leave.
                                            </p>

                                        </div>

                                        
                                    </div>
                                </div>
                            </div>
                           
                        </div>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->

            </section>
        
    </div>
</div>
